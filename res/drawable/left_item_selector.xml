<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中的时候 没有按下 失去焦点 -->
    <item android:drawable="@android:color/transparent" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>
    <!-- 获得焦点 -->
    <item android:drawable="@drawable/left_list_selected" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
    <!-- 获得焦点 并且选中 -->
    <item android:drawable="@drawable/left_list_selected" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>
    <!-- 按下的时候 -->
    <item android:drawable="@drawable/left_list_selected" android:state_pressed="true"/>

</selector>