<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp" >

    <RelativeLayout
        android:layout_width="840dp"
        android:layout_height="74dp"
        android:layout_marginLeft="38dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="WiFi开关"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/wifi_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="108dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="345dp"
            android:gravity="center" >

            <com.miri.launcher.view.SwitchButton
                android:id="@+id/wifi_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:focusable="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/list_divier" />
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        style="@style/scrollbar_vertical_gray"
        android:layout_width="902dp"
        android:layout_height="420dp"
        android:cacheColorHint="@null"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:listSelector="@drawable/wifi_item_selector"
        android:paddingRight="8dp" />

</LinearLayout>